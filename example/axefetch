#!/bin/sh
axe p "echo ............" "lolcat -t -a -i"
axe x unamk "uname -o" ash
axe l unamk
axe s uan ":| distro | "
axe c echo uan unamk
axe x kernel "uname -r" ash
axe l kernel
axe s ker ":| kernel | "
axe c echo ker kernel
axe x device "uname -n" ash
axe l device
axe x arch "bashbox arch" ash
axe l arch
axe s pc ":| device | "
axe m infodev pc device
axe s space " "
axe m inlo infodev space
axe c echo inlo arch
axe x host "cat /sys/devices/virtual/dmi/id/product_name" ash
axe l host
axe s hname ":| host__ | "
axe c echo hname host
axe x shell "basename $SHELL" ash
axe l shell
axe s shname ":| shell_ | "
axe c echo shname shell
axe x bin "bashbox ls /usr/bin | bashbox wc -l" ash
axe l bin
axe s pkg ":| pkgs__ | "
axe c echo pkg bin
axe p "echo ............" "lolcat -t -a -i"
axe f
